#include <stdio.h>
int main()
{
int a[3][3];
int i,j,sum=0;
 printf("Input elements in the matrix :\n");
for(i=0;i<3;i++)
{
for(j=0;j<3;j++)
 {
printf("element - [%d],[%d] : ",i,j);
scanf("%d",&a[i][j]);
 }
}  
printf("\nThe matrix is : \n");
for(i=0;i<3;i++)
{
printf("\n");
for(j=0;j<3;j++)
printf("%d\t",a[i][j]);
}
printf("\n\n");
for(i=0;i<3;i++)
{
for(j=0;j<3;j++)
{
if(i==j)
{
 sum=sum+a[i][j];
}}}
printf("The sum of diagonal elements of matrix = %d\n",sum);
return 0;
}
